<%- include('../partials/user/header') %>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-5">
                        <div class="mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h1 class="display-4 mb-3">Order Successful!</h1>
                        <p class="lead text-muted">Thank you for your purchase. Your order has been successfully placed.</p>
                    </div>

                    <div class="order-details">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="card h-100 border-0 bg-light">
                                    <div class="card-body">
                                        <h4 class="card-title mb-4">
                                            <i class="fas fa-info-circle me-2"></i>Order Information
                                        </h4>
                                        <p class="mb-2"><strong>Order ID:</strong> #<%= //orderId %></p>
                                        <p class="mb-2"><strong>Order Date:</strong> <%= //orderDate %></p>
                                        <p class="mb-2"><strong>Payment Method:</strong> <%= //paymentMethod %></p>
                                        <p class="mb-0"><strong>Order Status:</strong> 
                                            <span class="badge bg-info">Pending</span>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="card h-100 border-0 bg-light">
                                    <div class="card-body">
                                        <h4 class="card-title mb-4">
                                            <i class="fas fa-shipping-fast me-2"></i>Shipping Details
                                        </h4>
                                        <p class="mb-2"><strong>Shipping To:</strong> <%= //shippingAddress.name %></p>
                                        <p class="mb-2"><%= //shippingAddress.street %></p>
                                        <p class="mb-2"><%= //shippingAddress.city %>, <%= //shippingAddress.state %></p>
                                        <p class="mb-2"><%= //shippingAddress.country %> - <%= //shippingAddress.zipCode %></p>
                                        <p class="mb-0"><strong>Phone:</strong> <%= //shippingAddress.phone %></p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="order-items card border-0 bg-light mb-4">
                            <div class="card-body">
                                <h4 class="card-title mb-4">
                                    <i class="fas fa-shopping-cart me-2"></i>Order Items
                                </h4>
                                <div class="table-responsive">
                                    <table class="table table-borderless">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Product</th>
                                                <th class="text-center">Quantity</th>
                                                <th class="text-end">Price</th>
                                                <th class="text-end">Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% //orderItems.forEach(item => { %>
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <img src="<%= //item.image %>" alt="<%= //item.name %>" class="img-fluid rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                                        <div class="ms-3">
                                                            <h6 class="mb-0"><%= //item.name %></h6>
                                                            <small class="text-muted"><%= //item.sku %></small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-center"><%= //item.quantity %></td>
                                                <td class="text-end">$<%= //item.price.toFixed(2) %></td>
                                                <td class="text-end">$<%= //(item.price * item.quantity).toFixed(2) %></td>
                                            </tr>
                                            <% //}); %>
                                        </tbody>
                                        <tfoot class="table-light">
                                            <tr>
                                                <td colspan="3" class="text-end"><strong>Subtotal:</strong></td>
                                                <td class="text-end">$<%= //subtotal.toFixed(2) %></td>
                                            </tr>
                                            <tr>
                                                <td colspan="3" class="text-end"><strong>Shipping:</strong></td>
                                                <td class="text-end">$<%= //shipping.toFixed(2) %></td>
                                            </tr>
                                            <% //if (discount) { %>
                                            <tr>
                                                <td colspan="3" class="text-end"><strong>Discount:</strong></td>
                                                <td class="text-end">-$<%=// discount.toFixed(2) %></td>
                                            </tr>
                                            <%// } %>
                                            <tr>
                                                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                                <td class="text-end"><strong>$<%= //total.toFixed(2) %></strong></td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="next-steps text-center mb-4">
                            <h5 class="mb-3">What's Next?</h5>
                            <div class="row justify-content-center">
                                <div class="col-auto">
                                    <a href="/orders" class="btn btn-outline-primary me-3">
                                        <i class="fas fa-shopping-bag me-2"></i>View Your Orders
                                    </a>
                                    <a href="/shop" class="btn btn-primary">
                                        <i class="fas fa-store me-2"></i>Continue Shopping
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="support-info text-center">
                            <p class="small text-muted mb-0">
                                Need help? Contact our support team at 
                                <a href="mailto:support@southside.com" class="text-decoration-none">support@southside.com</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

