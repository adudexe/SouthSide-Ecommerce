<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>South Side - Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- SweetAlert2 CDN -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="bg-white min-h-screen flex items-center justify-center">
  <!-- Main Container -->
  <div class="w-full max-w-6xl flex flex-col lg:flex-row items-center lg:items-start justify-between gap-16 p-8">
    <!-- Left Section -->
    <div class="text-center lg:text-left space-y-6 flex flex-col justify-spacebetween gap-4 items-center">
      <span data-failed="<%= error || null %>" id="error"></span>
      <h1 class="text-6xl font-extrabold mb-4">SOUTH SIDE</h1>
      <p class="text-xl font-medium">FIND CLOTHES THAT MATCH YOUR STYLE</p>
      <button
        class="flex items-center justify-center bg-gray-100 text-black font-bold py-2 px-6 rounded-lg shadow hover:bg-gray-200 focus:outline-none">
        <span class="text-2xl font-bold">G</span>
        <a class="ml-3 text-lg btn" href="/user/auth/google">Login with Google</a>
      </button>
    </div>

    <!-- Right Section (Login Form) -->
    <div class="w-full max-w-md bg-black text-white rounded-lg p-8 shadow-lg">
      <h2 class="text-2xl font-bold text-center mb-8">LOGIN</h2>

      <form id="loginForm" class="space-y-6" method="POST">
        <label for="email" class="block text-sm font-medium mb-2">Email</label>
        <input type="email" id="email" name="email" placeholder="Enter your email"
          class="w-full px-4 py-3 rounded bg-gray-800 text-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-500">
        <div class="text-red-500 text-sm font-medium mb-4" id="emailErrorMessage"></div>

        <label for="password" class="block text-sm font-medium mb-2">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter your password"
          class="w-full px-4 py-3 rounded bg-gray-800 text-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-500">
        <div class="text-red-500 text-sm font-medium mb-4" id="passwordErrorMessage"></div>

        <button type="submit"
          class="w-full py-3 bg-gray-100 text-black font-semibold rounded-lg hover:bg-gray-200 focus:outline-none" id="loginbtn">
          LOGIN
        </button>

        <p class="text-sm text-center mt-4">
          Don't have an account? <a href="/user/signup" class="text-gray-300 hover:text-white underline">Sign Up</a>
        </p>
        <p class="text-sm text-center mt-4">
          <a href="" id="forgetPasswordLink" class="text-gray-300 hover:text-white underline">Forget password?</a>
        </p>
      </form>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/javascript/loginValidation.js"></script>
  <!-- Modal for email input (Forget password) -->
  <script src="/javascript/forgetPassword.js"></script>
  <script>
    let error = document.getElementById('error');

    let failedGootleAuth = error.getAttribute("data-failed");

    if(failedGootleAuth)
          {
            const Toast = Swal.mixin({
            toast: true,
            position: "top-end",
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
              toast.onmouseenter = Swal.stopTimer;
              toast.onmouseleave = Swal.resumeTimer;
            }
          });
          Toast.fire({
            title: failedGootleAuth || "Account Blocked",
            icon: "error"
          });
        }
  </script>

  
</body>

</html>
