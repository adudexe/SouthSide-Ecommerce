            <script>
                // Wait until the document is fully loaded
                document.addEventListener("DOMContentLoaded", function() {
                    const months = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
                    let data = [];
                    let labels = [];
                    let salesData = [];
                    let years = [];
                    let yearlyPrice = [];
                    
                    // Get the data from the HTML element with id "test2"
                    const { category, orders, total, count, products, categories, currentMonthTotal, monthly, yearly, bestSellingProduct, bestSellingCategory } = JSON.parse(document.getElementById("test2").getAttribute("data-id"));
                    
                    // Function to update chart data
                    function updateChart(staticsSort) {
                        // Map the monthly sales data if it's available
                        if (monthly && monthly.length > 0) {
                            salesData = monthly[0].months.map(monthIndex => Math.round(monthIndex.totalSales));
                        }
            
                        // Map the yearly data if it's available
                        if (yearly && yearly.length > 0) {
                            years = yearly.map(data => data.year);
                            yearlyPrice = yearly.map(data => data.totalYearSales);
                        }
            
                        if (staticsSort === "month") {
                            console.log("We are in month");
                            labels = months;
                            data = salesData;
                        }
            
                        if (staticsSort === "year") {
                            console.log("We are in years");
                            labels = years;
                            data = yearlyPrice;
                        }
            
                        // Get the chart context
                        var ctx = document.getElementById('myChart').getContext('2d');
            
                        // Destroy the previous chart if it exists
                        if (window.myChart instanceof Chart) {
                            window.myChart.destroy();
                        }
            
                        // Create the Chart.js bar chart
                        window.myChart = new Chart(ctx, {
                            type: 'bar', // Type of chart
                            data: {
                                labels: labels, // X-axis labels (Months or Years)
                                datasets: [{
                                    label: 'Sales Amount ($)', // Label for the dataset
                                    data: data, // Y-axis values (Sales per month or year)
                                    backgroundColor: 'rgba(75, 192, 192, 0.2)', // Bar color
                                    borderColor: 'rgba(75, 192, 192, 1)', // Border color of the bars
                                    borderWidth: 1
                                }]
                            },
                            options: {
                                responsive: true, // Makes the chart responsive
                                scales: {
                                    y: {
                                        beginAtZero: true // Start Y-axis from zero
                                    }
                                }
                            }
                        });
                    }
            
                    // Get the staticsSort value (month or year)
                    const staticsSort = document.getElementById("sale-staticts");
            
                    // Initially render the chart with the default value
                    updateChart(staticsSort.value);
            
                    // Add an event listener to handle changes
                    staticsSort.addEventListener("change", function() {
                        updateChart(staticsSort.value);
                    });
                });
            </script>
            
            





